{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,

		/* Modules */
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types"],

		/* Emit */
		"declaration": true,
		"sourceMap": true
	},
	"include": ["src", "scripts"],
	"exclude": ["node_modules", "dist"]
}
